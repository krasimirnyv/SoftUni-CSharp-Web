@using GarageApp.Models
@model Garage

@{
    ViewData["Title"] = "Garage Details";
}

<h2>Garage Details</h2>

<div class="mb-3">
    <h4>@Model.Name</h4>
    <p class="mb-1"><strong>Location:</strong> @Model.Location</p>
    <p class="mb-0"><strong>Cars:</strong> @(Model.Cars?.Count ?? 0)</p>
</div>

<hr />

<h3>Cars in this garage</h3>

@if (Model.Cars == null || !Model.Cars.Any())
{
    <p>No cars in this garage.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Make</th>
            <th>Model</th>
            <th>Year</th>
            <th>Type</th>
            <th>Available</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var c in Model.Cars.OrderBy(c => c.Make).ThenBy(c => c.Model))
        {
            <tr>
                <td>@c.Make</td>
                <td>@c.Model</td>
                <td>@c.Year</td>
                <td>@c.BodyStyle</td>
                <td>@(c.IsAvailable ? "Yes" : "No")</td>
                <td>
                    <a asp-controller="Cars"
                       asp-action="Details"
                       asp-route-id="@c.Id">
                        Details
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}

<div class="mt-3">
    <a asp-controller="Garage" asp-action="Index">Back to GarageApp</a>
</div>